@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<header class="header can-sticky">

    <div class="middle_bar">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-3 col-sm-4 col-7">
                    <div class="logo">
                        <a href="/Home" class="d-flex h-100">
                            <img src="/home/images/logo.png" alt="logo" class="image-fit-contain">
                        </a>
                    </div>
                </div>


                <div class="col-lg-4 col-sm-8 col-5 order-lg-3">
                    <ul class="header_action">
                        <li>
                            @if (HttpContextAccessor.HttpContext.Session.GetString("CandidateId") == null)
                            {
                                <a href="~/Career/Login">
                                    <div class="icon">
                                        <i class="bi-person"></i>
                                    </div>
                                    <div class="text">
                                        <h6>Login</h6>
                                    </div>
                                </a>
                            }
                            else
                            {
                                <a href="~/Career/Logout">
                                    <div class="icon">
                                        <i class="bi-person"></i>
                                    </div>
                                    <div class="text">
                                        <h6>Logout</h6>
                                    </div>
                                </a>
                            }
                        </li>

                    </ul>
                </div>


                <div class="col-lg-5 order-lg-2">
                    @*<div class="input-group">
                            <div class="input-group-prepend">
                                <select>
                                    <option value="All" selected>All</option>
                                    <option value="Electronics">Electronics</option>
                                    <option value="Clothes">Clothes</option>
                                    <option value="Wooden">Wooden</option>
                                </select>
                            </div>
                            <input type="text" name="#" class="form-control form-control-custom" placeholder="Search for medical products..." autocomplete="off" required>
                            <div class="input-group-append m-0">
                                <button type="submit" class="thm-btn thm-bg-color-one">Search</button>
                            </div>
                        </div>*@
                </div>

            </div>
        </div>
    </div>


    <div class="navigation_bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <nav class="navigation">
                        <ul class="main-menu">
                            <li class="menu-item">
                                <a href="/Home">Home</a>
                            </li>
                            <li class="menu-item">
                                <a href="/Products">Products</a>
                            </li>
                            <li class="menu-item">
                                <a href="/About">About Us</a>
                            </li>
                            <li class="menu-item">
                                <a href="/Contact">Contact Us</a>
                            </li>
                            <li class="menu-item">
                                <a href="/QuoteUs">Quote us</a>
                            </li>
                            <li class="menu-item menu-item-has-children">
                                <a href="#">Carrer</a>
                                <ul class="sub-menu">
                                    @if (HttpContextAccessor.HttpContext.Session.GetString("CandidateId") == null)
                                    {
                                        <li class="menu-item">
                                            <a href="~/Career/Register">Register</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="menu-item">
                                            <a href="~/Career/CandidateDetail/@HttpContextAccessor.HttpContext.Session.GetString("CandidateId")">Your Info</a>
                                        </li>
                                    }
                                </ul>
                            </li>


                        </ul>
                    </nav>
                </div>
                <div class="col-lg-4">
                    <div class="nav_actions">
                        <ul class="text_action">
                            @*<li>
                                    <a href="shop-grid.html">
                                        <i class="fal fa-stethoscope"></i>
                                        Mediscare
                                        <span class="badge">6</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="contact.html">(+78) 259 4875 347</a>
                                </li>*@
                        </ul>
                        <div class="hamburger">
                            <div class="hamburger_btn">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.ErrorMessages != null && ViewBag.ErrorMessages != "")
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.ErrorMessages
        </div>
    }
    @if (ViewBag.Messages != null && ViewBag.Messages != "")
    {
        <div class="alert alert-success text-center" role="alert">
            @ViewBag.Messages
        </div>
    }
</header>
