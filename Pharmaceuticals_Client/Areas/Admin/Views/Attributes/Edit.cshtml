@model Pharmaceuticals_Client.Areas.Admin.Models.AdminViewModel

@{
    ViewData["Title"] = "Edit Attribute";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="attribute.AttributeId" hidden class="form-control" />
            <div class="form-group">
                <label asp-for="attribute.AttributeName" class="control-label"></label>
                <input asp-for="attribute.AttributeName" class="form-control" />
                <span asp-validation-for="attribute.AttributeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attribute.Value" class="control-label"></label>
                <input asp-for="attribute.Value" class="form-control" />
                <span asp-validation-for="attribute.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attribute.Unit" class="control-label"></label>
                <input asp-for="attribute.Unit" class="form-control" />
                <span asp-validation-for="attribute.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attribute.ProductId" class="control-label"></label>
                <select asp-for="attribute.ProductId" class="form-control" asp-items="ViewBag.products"></select>
                <span asp-validation-for="attribute.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

