@model Pharmaceuticals_Client.Areas.Admin.Models.AdminViewModel

@{
    ViewData["Title"] = "Edit Manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="managerInfo.AdminId" hidden class="form-control" />
            <div class="form-group">
                <label asp-for="managerInfo.FullName" class="control-label"></label>
                <input asp-for="managerInfo.FullName" class="form-control" />
                <span asp-validation-for="managerInfo.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Address" class="control-label"></label>
                <input asp-for="managerInfo.Address" class="form-control" />
                <span asp-validation-for="managerInfo.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Email" class="control-label"></label>
                <input asp-for="managerInfo.Email" class="form-control" />
                <span asp-validation-for="managerInfo.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Phone" class="control-label"></label>
                <input asp-for="managerInfo.Phone" class="form-control" />
                <span asp-validation-for="managerInfo.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Username" class="control-label"></label>
                <input asp-for="managerInfo.Username" class="form-control" />
                <span asp-validation-for="managerInfo.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Password" class="control-label"></label>
                <input asp-for="managerInfo.Password" class="form-control" />
                <span asp-validation-for="managerInfo.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Role" class="control-label"></label>
                <input asp-for="managerInfo.Role" class="form-control" />
                <span asp-validation-for="managerInfo.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="managerInfo.Image" class="control-label"></label>
                        <input asp-for="managerInfo.Image" type="text" hidden class="form-control" />
                        <input asp-for="managerInfo.Image" type="file" class="form-control" />
                        <span asp-validation-for="managerInfo.Image" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <img src="/images/AdminImages/@Model.managerInfo.Image" alt="" width="200" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="managerInfo.Created_date" class="control-label"></label>
                <input asp-for="managerInfo.Created_date" class="form-control" />
                <span asp-validation-for="managerInfo.Created_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

