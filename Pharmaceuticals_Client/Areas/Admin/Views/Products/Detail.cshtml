@model Pharmaceuticals_Client.Areas.Admin.Models.AdminViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ProductImage)
        </dt>
        <dd class="col-sm-10">
            <img src="/images/Products/@Model.product.ProductImage" alt="Alternate Text" width="100" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ProductSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.ProductSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Productivity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Productivity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.MachineWeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.MachineWeight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ModelNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.ModelNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.ManufacturerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Manufacturer.ManufacturerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Attributes)
        </dt>
        @foreach (var item in Model.product.Attributes)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.AttributeName) : @Html.DisplayFor(modelItem => item.Value) (@Html.DisplayFor(modelItem => item.Unit))
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.product.ProductId }) |
    <a asp-action="Index">Back to List</a>
</div>
