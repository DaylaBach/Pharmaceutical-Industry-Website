@model Pharmaceuticals_Client.Areas.Admin.Models.AdminViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="product.ProductId" hidden class="form-control" />
            <div class="form-group">
                <label asp-for="product.ProductName" class="control-label"></label>
                <input asp-for="product.ProductName" class="form-control" />
                <span asp-validation-for="product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="product.ProductImage" class="control-label"></label>
                        <input asp-for="product.ProductImage" type="text" hidden class="form-control" />
                        <input asp-for="product.ProductImage" type="file" class="form-control" />
                        <span asp-validation-for="product.ProductImage" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <img src="/images/Products/@Model.product.ProductImage" alt="" width="200" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="product.ProductSize" class="control-label"></label>
                <input asp-for="product.ProductSize" class="form-control" />
                <span asp-validation-for="product.ProductSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.Productivity" class="control-label"></label>
                <input asp-for="product.Productivity" class="form-control" />
                <span asp-validation-for="product.Productivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.MachineWeight" class="control-label"></label>
                <input asp-for="product.MachineWeight" class="form-control" />
                <span asp-validation-for="product.MachineWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.ModelNumber" class="control-label"></label>
                <input asp-for="product.ModelNumber" class="form-control" />
                <span asp-validation-for="product.ModelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.CreatedDate" class="control-label"></label>
                <input asp-for="product.CreatedDate" class="form-control" />
                <span asp-validation-for="product.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.CategoryId" class="control-label"></label>
                <select asp-for="product.CategoryId" class="form-control" asp-items="ViewBag.categories"></select>
                <span asp-validation-for="product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product.ManufacturerId" class="control-label"></label>
                <select asp-for="product.ManufacturerId" class="form-control" asp-items="ViewBag.manufacturers"></select>
                <span asp-validation-for="product.ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

